{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dev",
            "type": "shell",
            "command": "npm run dev",
            "problemMatcher": ["$tsc-watch"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true
        },
        {
            "label": "build",
            "type": "shell",
            "command": "npm run build",
            "problemMatcher": ["$tsc"],
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "npm test",
            "group": "test"
        }
    ]
}
